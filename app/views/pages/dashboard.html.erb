<div class= "p-2"><h1>Bookings Overview</h1>
</div>
<div class="cards d-flex justify-content-around p-2">
    <% @bookings.each do |booking| %>
      <%# cards %>
      <div class="card-trip">
        <% if booking.offer.photos.attached? %>
          <%= cl_image_tag booking.offer.photos.first.key, height: 300, width: 400, crop: :fill %>
        <% end %>
        <div class="card-trip-infos p-3">
          <div>
            <h2><%= booking.offer.title %></h2>
            <p><strong>Request by: </strong><%= booking.user.first_name %></p>
            <p><strong>Offered by: </strong><%= booking.offer.user.first_name %></p>
            <p><strong>Status: </strong><%= booking.status %></p>
            <p><strong>Start: </strong> <%=booking.start_date%></p>
            <p><strong>End: </strong> <%=booking.end_date%></p>

            <div class="row justify-content-md-center">
            <% if booking.offer.user == current_user && booking.status == 'pending' %>
            <%= button_to "Accept", booking_path(booking, status: 1), method: :patch, class: "btn btn-gradient" %>
            <% end %>
            <% if booking.offer.user == current_user && booking.status == 'pending' %>
            <%= button_to "Decline", booking_path(booking, status: 2), method: :patch, class: "btn btn-gradient" %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
      <%# cards end%>
    <% end %>
</div>
