<div class="float-container">
  <div class="float-child">
      <h1 class="y-3" style= "font-family: 'Crimson Text', serif;"> <%= @offer.title %></h1>
      <div class="product-details b-3">
        <div>
          <h3 class="pb-3">Product Details</h3>
          <p class="price-p"> <span><%= @offer.price_per_day %> EUR per day</span><p>
          <div class="condition-p">
          <h6 class="mr-3"><i class="fa-solid fa-user"></i> Offered by: <%= @offer.user.first_name %></h6>
          <h6 class="ml-3">Condition: <%= @offer.condition %></h6>
          <h6 class="ml-3">Size: <%= @offer.size %></h6>
          </div>
          <br>
          <h6 style="font-weight:bold">Description: </h6>
          <p> <%= @offer.description %></p>
        </div>
        <br>
        <div class="show-buttons">
          <% if current_user != @offer.user %>
              <%= link_to "Rent this dress!", new_offer_booking_path(@offer), class: "btn btn-success" %>
          <% end %>
          <% if policy(@offer).edit? %>
          <%= link_to "Edit", edit_offer_path(@offer), class: "btn btn-dark mr-2"%>
          <% end %>
          <% if policy(@offer).destroy? %>
            <%= button_to "Delete", @offer, class: "btn btn-dark", method: :delete if policy(@offer).destroy? %>
          <% end %>
        </div>
        <br>
        <div class="t-3">
        <%= link_to "Back to offers", offers_path, class: "btn btn-outline-dark"%>
        </div>
    </div>
  </div>
    <div class="float-child p-3">
      <%= render "components/carousel" %>
    </div>
</div>
<br>
