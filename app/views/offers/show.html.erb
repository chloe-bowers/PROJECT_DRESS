<div class="container" >
  <div class="row justify-content-md-center">
    <div class="col">
    <h1 style= "font-family: 'Crimson Text', serif;"> Dress "<%= @offer.title %>"</h1>
    <div class="p-2">
      <p> Price: <%= @offer.price_per_day %> EUR</p>
      <p> Condition: <%= @offer.condition %></p>
      <p> Description: <%= @offer.description %></p>
      <p> Offered by: <%= @offer.user.first_name %></p>
    </div>

    <div class="p-2">
      <div class="p-2">
        <% if policy(@offer).edit? %>
        <%= link_to "Edit", edit_offer_path(@offer), class: "btn btn-outline-dark"%>
        <% end %>
        <% if policy(@offer).destroy? %>
        <%= button_to "Delete", @offer, class: "btn btn-outline-dark", method: :delete if policy(@offer).destroy? %>
        <% end %>
        <% if current_user != @offer.user %>
              <%= link_to "Rent this dress!", new_offer_booking_path(@offer), class: "btn btn-outline-dark" %>
        <% end %>

       <br>

      <div>
      <%= link_to "Back to offers", offers_path, class: "btn btn-outline-dark"%>
    </div>
      <br>
      </div>
    </div><%= render "components/carousel" %>
  </div>
</div>
