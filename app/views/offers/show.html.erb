
<div class="p-5">
<h1> Dress "<%= @offer.title %>"</h1>
  <div class="p-2">
    <p> Price: <%= @offer.price_per_day %> EUR</p>
    <p> Condition: <%= @offer.condition %></p>
    <p> Description: <%= @offer.description %></p>
    <p> Offered by: <%= @offer.user.first_name %></p>
  </div>

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src = "<% @offer.photo%>" alt="First slide">
      </div>
      <div class="carousel-item active">
        <img class="d-block w-100" src = "<% @offer.photo%>" alt="First slide">
      </div>
      <div class="carousel-item active">
        <img class="d-block w-100" src = "<% @offer.photo%>" alt="First slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="p-2 btn btn-outline-dark">
    <%# How can we add and differentiate between owner and normal user? %>
    <%# Owner should be able to delete or edit offer %>

    <%= link_to "Rent this dress!", new_offer_booking_path(@offer), class: "btn btn-gradient" %>
    <% if policy(@offer).edit? %>
    <%= link_to "Edit", edit_offer_path(@offer), class: "btn btn-gradient"%>
    <% end %>
    <%= button_to "Destroy this offer", @offer, method: :delete if policy(@offer).destroy? %>

  </div>
  <br>
  <%= link_to "Back", offers_path%>
</div>
