<div class = "container">
  <div class="p-2">

    <h1 style= "font-family: 'Crimson Text', serif;">All dresses</h1>

    <%= form_with url: offers_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :user,
        params[:user],
        class: "form-control",
        placeholder: "Find a dress from"
      %>
      <%= text_field_tag :size,
        params[:size],
        class: "form-control",
        placeholder: "Type a size"
      %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a dress"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
    
 <div class="p-1">
  <%= link_to "Upload your dress for hire", new_offer_path, class: "btn btn-outline-dark" %>
</div>

<div class="cards">
      <% @offers.each do |offer| %>
        <div class="card">
          <% if offer.photos.attached? %>
            <%= cl_image_tag offer.photos.first.key, height: 300, width: 400%>
          <% end %>
          <div class="card-infos">
            <div>
              <h2><%= link_to offer.title, offer_path(offer) %></h2>
              <p><%=offer.description%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
