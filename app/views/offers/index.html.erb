<div class = "container">
  <div class="p-2">

    <h1 style= "font-family: 'Crimson Text', serif;">All dresses</h1>

    <%= form_with url: offers_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :user, params[:user], class: "form-control", placeholder: "Find a dress from"%>
      <%= text_field_tag :size, params[:size], class: "form-control", placeholder: "Type a size"%>
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a dress"%>
      <%= submit_tag "Search", class: "btn btn-dark" %>
    <% end %>
    <br>
    <div>
    <%= link_to new_offer_path, class: "btn btn-dark" do %>
      <i class="fa-solid fa-plus"></i> Upload your dress for hire
    <% end %>
    </div>

    <div class="cards">
      <% @offers.each do |offer| %>
        <div class="card">
          <% if offer.photos.attached? %>
            <%= link_to '', offer_path(offer), class: 'card-link'  %>
            <%= cl_image_tag offer.photos.first.key, height: 300, width: 400%>
          <% end %>
          <div class="card-infos">
            <div>
              <h2 style= "font-family: 'Crimson Text', serif;"> <%= link_to offer.title, offer_path(offer) %></h2>
              <p>Size: <%=offer.size%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
