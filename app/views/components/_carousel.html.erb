<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width: 500px">
  <div class="carousel-inner">

    <div class="carousel-item active">
      <%= cl_image_tag @offer.photos.first.key, class: "d-block w-100", alt: "First slide" %>
    </div>

    <% @offer.photos[1..-1].each do |photo| %>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, class: "d-block w-100", alt: "Second slide" %>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>

  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

  </div>
